{% sw_extends '@Storefront/storefront/layout/meta.html.twig' %}

{% block layout_head_stylesheet %}
    {{ parent() }}

    {% if not ecbConfEqualsConst('integrationMode', 'VALUE_INTEGRATION_MODE_NONE') %}
        <link rel="preload" as="image" href="{{ asset('bundles/ecblurhash/storefront/assets/images/ecb-spinner.svg') }}">
    {% endif %}

    {% if ecbConfEqualsConst('integrationMode', 'VALUE_INTEGRATION_MODE_CUSTOM') %}
        <script src="{{ asset('bundles/ecblurhash/ecb-decode.js', 'asset') }}"></script>
    {% elseif ecbConfEqualsConst('integrationMode', 'VALUE_INTEGRATION_MODE_EMULATED') %}
        <script src="{{ asset('bundles/ecblurhash/ecb-emulated.js', 'asset') }}"></script>
    {% endif %}

{% endblock %}
