{% block ecb_base_script %}
    {% if ecbConfEqualsConst('integrationMode', 'VALUE_INTEGRATION_MODE_EMULATED') %}
        <script>
            (function () {
                if (window.ecbDecode && window.ecbReadyStateChangeListener) {
                    document.addEventListener('readystatechange', window.ecbReadyStateChangeListener);
                    window.ecbDecode();
                }
            })();
        </script>
    {% endif %}
{% endblock %}
