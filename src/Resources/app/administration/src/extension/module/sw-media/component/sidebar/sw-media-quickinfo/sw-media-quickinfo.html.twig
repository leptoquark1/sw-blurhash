{% block sw_media_quickinfo_quickactions_content %}
    {% parent %}

    {% block sw_media_quickinfo_quickactions_content_blurhash_actions %}
        <ecb-quick-actions
            :isValid="isEcbValid"
            :isValidating="isEcbValidating"
            validationErrorText="ecBlurhash.general.validation.media.notQualified"
            :validationError="ecbValidationError"
        >
            <template slot="actions">
                {% block sw_media_quickinfo_quickactions_content_blurhash_actions_generate %}
                    <ecb-quick-action
                        @click="onEcbGenerateActionClick"
                        icon="regular-forklift"
                        :title="generationHelpText"
                        :text="generationText"
                        :disabled="canEcbGenerate === false || isEcbLoading"
                    ></ecb-quick-action>
                {% endblock %}

                {% block sw_media_quickinfo_quickactions_content_blurhash_actions_remove %}
                    <ecb-quick-action
                        @click="onEcbRemoveActionClick"
                        icon="regular-trash"
                        color="#fc427b"
                        title="ecBlurhash.general.removal.media.help"
                        text="ecBlurhash.general.removal.media.label"
                        :disabled="isEcbLoading || !hasItemBlurhash"
                    ></ecb-quick-action>
                {% endblock %}
            </template>
        </ecb-quick-actions>
    {% endblock %}
{% endblock %}

{% block sw_media_quickinfo_metadata_content_base %}
    {% parent %}

    {% block sw_media_quickinfo_metadata_item_blurhash %}
        <sw-media-quickinfo-metadata-item
            class="sw-media-quickinfo-metadata-blurhash"
            :label-name="$t('ecBlurhash.general.blurhash')"
        >
            <span :title="itemBlurhash" v-if="hasItemBlurhash">
                <sw-icon color="green" name="regular-checkmark-xs" small></sw-icon>
            </span>
            <span :title="itemBlurhash" v-else>
                <sw-icon color="red" name="regular-times-xs" small></sw-icon>
            </span>
        </sw-media-quickinfo-metadata-item>
    {% endblock %}
{% endblock %}
